@model IEnumerable<Pii.Areas.Accounts.Models.UserProfile>
@{
    ViewBag.Title = "ViewAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="view-all">
<h2>Xem tất cả</h2>
<table>
    <tr>
        <th>Username</th>
        <th>Quyền</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.GetRole().ToString()</td>
            <td>
                @using (Html.BeginForm("Delete","Manage"))
                {
                    <input type="hidden" name="UserId" value="@user.UserId" />
                    <input type="submit" name="name" value="Xóa" />
                }
            </td>
        </tr>
    }
</table>
<div class="row">
    @Html.ActionLink("Thêm tài khoản", "Register", "Home", new { Area = "Accounts" }, null)
</div>
    </div>