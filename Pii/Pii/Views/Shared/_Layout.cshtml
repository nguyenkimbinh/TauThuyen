<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ja" lang="ja">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Vitranschart JSC</title>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-2.0.2.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/Content/ui/base/jquery.ui.all.css">
    <script src="/Scripts/ui/jquery.ui.core.js"></script>
    <script src="/Scripts/ui/jquery.ui.widget.js"></script>
    <script src="/Scripts/ui/jquery.ui.datepicker.js"></script>
    <script src="~/Scripts/jquery.validate.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Content/ui/jquery.ui.timepicker.css" rel="stylesheet" />
    <script src="~/Scripts/ui/jquery.ui.timepicker.js"></script>
</head>
@{
    Pii.Models.LayoutModel LayoutModel = ViewBag.LayoutModel;
}
<body>
    <div class="wrapper">
        <div class="banner">
            <img src="~/images/banner.png" alt="banner" />
        </div>
        <div class="navigation">
            <div id="menu">
                <a href="@Url.Action("Index", "Home", new { Area = "CargoShip" }, null)">Trang chủ</a>
                @if (Roles.IsUserInRole("administrators"))
                {
                    using (Html.BeginForm("ViewAll", "Manage", new { Area = "Accounts", @UserName = User.Identity.Name }, FormMethod.Post, null))
                    {
                    <a href="#" onclick="$(this).closest('form').submit();">Quản lý Admin</a>
                    }
                }

            </div>
            <div id="login">
                @if (Request.IsAuthenticated)
                {
                    <p>Xin Chào <span>@User.Identity.Name</span> !</p>
                    @Html.ActionLink("Thoát", "LogOff", "Home", new { Area = "Accounts" }, null)
                }
                else
                {
                    @Html.ActionLink("Đăng nhập", "Login", "Home", new { Area = "Accounts" }, null)}
            </div>
        </div>
        <div class="clear"></div>
        <div class="content">
            @RenderBody()
            <div class="warning">
                @LayoutModel.Warning
            </div>
        </div>

        <div class="footer">
            <div class="footer1">Copyright Vitranschart JSC 2013</div>
            <div class="footer2">"<span style="color: #d3892a;">Vận tải biển toàn cầu,</span> thách thức thành công không giới hạn"</div>
        </div>
    </div>

</body>

</html>
